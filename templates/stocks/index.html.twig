{% extends 'base.html.twig' %}

{% block title %}Stocks index{% endblock %}

{% block body %}
    <h1>Stocks index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numero</th>
                <th>Nombre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stock in stocks %}
            <tr>
                <td>{{ stock.id }}</td>
                <td>{{ stock.numero }}</td>
                <td>{{ stock.nombre }}</td>
                <td>
                    <a href="{{ path('app_stocks_show', {'id': stock.id}) }}">show</a>
                    <a href="{{ path('app_stocks_edit', {'id': stock.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_stocks_new') }}">Create new</a>
{% endblock %}
